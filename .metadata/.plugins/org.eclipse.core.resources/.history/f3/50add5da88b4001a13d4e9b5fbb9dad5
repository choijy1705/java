package SWexpert;
import java.util.*;

public class Swea6019 {
	static Scanner sc = new Scanner(System.in);
	static int C;
	static int A;
	static int B;
	static int fly;
	static int distance;
	public static void main(String[] args) {
		C = sc.nextInt();
		
		for(int tc=1;tc<=C;tc++) {
			distance = sc.nextInt();
			A = sc.nextInt();
			B = sc.nextInt();
			fly = sc.nextInt();
			
			int crushtime = distance/(A+B);
			int dir = 0;
			int realtime = 0;
			while(distance >0) {
				int time = 0;
				if(dir ==0) {
					time = distance/(fly + B);
				}else {
					time = distance/(fly+A);
				}
				realtime += time;
				distance -= (A+B)*time;
			}
			
			int flydistance = realtime * fly;
			
			System.out.println("#" + tc + " " + flydistance);
		}

	}

}
