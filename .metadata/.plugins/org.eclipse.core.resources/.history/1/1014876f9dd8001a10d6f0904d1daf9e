package hackerrank;
import java.util.*;
public class CakeWalk {
	static Scanner sc = new Scanner(System.in);
	static int j;
	public static void main(String[] args) {
		
		j = sc.nextInt();
		System.out.println(j);
		int[] arr = new int[j];
		
		for(int i=0;i<j;i++) {
			arr[i] = sc.nextInt();
		}
		
		Arrays.sort(arr);
		int sum=0;
		for(int i=0;i<j;i++) {
	
			sum+=Math.pow(2, j-1) * arr[i];
			j--;
		}
		System.out.println(sum);
	}

}
